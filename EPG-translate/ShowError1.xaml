<Window x:Class="EPG_translate.ShowError1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPG_translate"
        mc:Ignorable="d"
        Title="Contenido no válido" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Images/Icon.png">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="283*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblencabezado" Grid.Row="0" Background="#A80053" Content="---------" Foreground="White" VerticalAlignment="Top" FontSize="20" Height="35" Padding="20,0,0,0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,7,0,0" Width="250">
            <DataGrid x:Name="datagrid1" Width="250" Margin="0,10,0,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" />
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Este contenido producirá errores en el servidor de cherryEPG, vaya a la respectiva columna y fila elimine el contenido y proceda nuevamente con la ingesta del archivo." Foreground="White" FontSize="15" HorizontalAlignment="Center" Margin="0,10,0,0" Width="739" TextWrapping="Wrap"/>



    </Grid>
</Window>
